@model ClientOrderTrackingSystem.ViewModels.VwOrderClientProductPayment

@{
    // Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

<h4>Order</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="OrderDate" class="control-label"></label>
                <input asp-for="OrderDate" class="form-control" />
                <span asp-validation-for="OrderDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClientId" class="control-label"></label>
               @*  <input asp-for="ClientId" class="form-control" /> *@
                    <select asp-for="ClientId" class="form-control"
                            asp-items="@(new SelectList(Model.lstClients,"ClientId","ClientName"))"> </select>
                <span asp-validation-for="ClientId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductId" class="control-label"></label>
                @* <input asp-for="ProductId" class="form-control" /> *@
                    <select asp-for="ProductId" class="form-control"
                            asp-items="@(new SelectList(Model.lstProducts,"ProductId","ProductName"))"> </select>
                <span asp-validation-for="ProductId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PaymentTypeId" class="control-label"></label>
               @*  <input asp-for="PaymentTypeId" class="form-control" /> *@
                    <select asp-for="PaymentTypeId" class="form-control"
                            asp-items="@(new SelectList(Model.lstPayments,"PaymentTypeId","PaymentTypeName"))"> </select>
                <span asp-validation-for="PaymentTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

</body>
</html>
